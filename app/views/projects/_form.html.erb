 <%= form_with model: @project, local: true do |form| %>
 <section class="page-section cta">
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <div class="cta-inner text-center rounded">
              <h2 class="section-heading mb-5">
                <span class="section-heading-upper">Come On</span>
                <span class="section-heading-lower">Create new Project</span>
              </h2>
            </div>
            <form name="sentMessage" id="contactForm" novalidate>
          	<div class="control-group">
          		<div class="form-group floating-label-form-group controls">
          			<label>Picture</label>
					<%= form.file_field :picture %>
				</div>
            		<div class="form-group floating-label-form-group controls">
					<label>Name</label>
              			<%= form.text_field :name, class: "form-control", placeholder: "Name...", id: "name" %>
              		<p class="help-block text-danger"></p>
            		</div>
          		</div>
		          <div class="control-group">
		            <div class="form-group floating-label-form-group controls">
		              <label>Predescription</label>
		              <%= form.text_area :predescription, textarea_rows: "5", class: "form-control", placeholder: "Predescription...", id: "message" %>
		              <p class="help-block text-danger"></p>
		            </div>
		          </div>
		          <div class="control-group">
		            <div class="form-group floating-label-form-group controls">
		              <label>Description</label>
		              <%= form.text_area :description, textarea_rows: "5", class: "form-control", placeholder: "Description...", id: "message" %>
		              <p class="help-block text-danger"></p>
		            </div>
		          </div>
		          <div class="control-group">
		            <div class="form-group floating-label-form-group controls">
		              <label>Characteristic</label>
		              <%= form.text_area :characteristic, textarea_rows: "5", class: "form-control", placeholder: "Characteristic...", id: "message" %>
		              <p class="help-block text-danger"></p>
		            </div>
		          </div>
		          <div class="control-group">
            		<div class="form-group floating-label-form-group controls">
					<label>Price</label>
              			<%= form.text_field :price, class: "form-control", placeholder: "Price...", id: "name" %>
              		<p class="help-block text-danger"></p>
            		</div>
          		</div>
		          <br>
		          <div id="success"></div>
		          <div class="form-group">
		            <%= form.submit 'Create Project', class: "btn btn-primary", id: "sendMessageButton" %>
		          </div>
		       </form>
          </div>
        </div>
      </div>
    </section>	
<% end %>