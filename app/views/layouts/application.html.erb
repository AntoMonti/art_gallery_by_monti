<!DOCTYPE html>
<html>
  <head>
    <title>ArtGalleryByMonti</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if artist_signed_in? %>
      Hello, <%= current_artist.username %> | <%= link_to 'Sign out', destroy_artist_session_path, method: :delete %> 
    <% else %>
      <%= link_to 'Sign in', new_artist_session_path %>
    <% end %>  
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- Header -->
    <%= render 'layouts/header' %>
    
    <%= yield %>
  </body>
</html>
